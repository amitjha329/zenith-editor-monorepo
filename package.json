{
  "name": "zenith-editor",
  "version": "1.1.0",
  "description": "A modern, production-ready WYSIWYG editor built with React and TypeScript",
  "private": false,
  "scripts": {
    "build": "pnpm -r build",
    "dev": "pnpm -r dev",
    "lint": "eslint . --ext .ts,.tsx",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "test": "pnpm -r test",
    "test:coverage": "pnpm --filter zenith-editor test:coverage",
    "clean": "pnpm -r clean",
    "demo": "pnpm --filter zenith-editor-demo dev",
    "build:demo": "pnpm --filter zenith-editor-demo build",
    "build:package": "pnpm --filter zenith-editor build",
    "type-check": "pnpm --filter zenith-editor tsc --noEmit",
    "prettier": "prettier --write .",
    "prettier:check": "prettier --check .",
    "release": "pnpm build:package && pnpm test && echo 'Ready for release!'",
    "prerelease": "pnpm lint && pnpm type-check && pnpm test && pnpm build:package"
  },
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "devDependencies": {
    "@types/node": "^20.11.5",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-react": "^7.35.0",
    "eslint-plugin-react-hooks": "^4.6.2",
    "prettier": "^3.3.3",
    "typescript": "^5.5.4"
  },
  "packageManager": "pnpm@8.15.1",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  }
}
